<div class="carousel">
  <h1 class="carousel"> Recipes </h1>

  <div class="well">
    <%  @recipes.each do |recipe| %>
      <div class="col-xs-2">
        <p> <%= link_to"#{image_tag(recipe.try(:image), class: "img-responsive")}".html_safe, recipe.try(:source_url), target: "_blank"%></p>
        <li style="color:#cc3333;"> <%=recipe.title %> </li>
      </div>
      <% end %>
  </div>


</div>
